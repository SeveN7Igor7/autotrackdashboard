# Production Environment Variables
# IMPORTANTE: Configure estas variáveis no seu provedor de hospedagem

# Backend API Configuration - PRODUÇÃO (HTTPS)
NEXT_PUBLIC_API_PRODUCTION_URL=https://api.seudominio.com
# ou se usar a mesma API mas com HTTPS:
# NEXT_PUBLIC_API_PRODUCTION_URL=https://192.168.111.10:3000

# Fallback para desenvolvimento (usado se PRODUCTION_URL não estiver definida)
NEXT_PUBLIC_API_BASE_URL=http://192.168.111.10:3000

# App Configuration
NEXT_PUBLIC_APP_NAME=ATIC Dashboard
NEXT_PUBLIC_APP_VERSION=1.0.0

# Performance & polling
NEXT_PUBLIC_ENABLE_AUTO_REFRESH=false
NEXT_PUBLIC_ENABLE_OBC_COMMANDS=true